<%= form_for @article do |f| %>

<p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %> <br>
    <%= f.label :content %> <br>
    <%= f.text_area :content %><br>
    
    <% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    <% end %>
</p>

<p>
    <%= f.submit %>
</p>

<% end %>